

<h1>
  Director #<%=@id%> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
  <%=@name%>  </dd>

  <dt>
    Dob
  </dt>
  <dd>
<%=@dob%>  </dd>

  <dt>
    Bio
  </dt>
  <dd>
  <%=@bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
<%=@created_at%>  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
<%=@updated_at%>  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
<% @directed.all.each do |movie| %>

  <tr>
  <td> <%= movie.id %></td>
  <td><img source = "<%= movie.image%>"></td>
  <td> <%= movie.title%></td>
  <td> <%= movie.year%></td>
  <td> <a href="/movies/<%= movie.id %>">Show details</a></td>
  </tr>
<%end%>

</table>
